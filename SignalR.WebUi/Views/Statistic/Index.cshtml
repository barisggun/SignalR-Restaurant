        <script type="text/javascript">

            $(document).ready(() => {

                var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7224/SignalRHub").build();
                $("#connstatus").text(connection.state);

                connection.start().then(() => {
                    $("#connstatus").text(connection.state);

                    setInterval(() => {
                        connection.invoke("SendStatistic");

                    }, 1000);


                }).catch((err) => { console.log(err) });


                connection.on("RecieveCategoryCount", (value) => {
                    $("#categorycount").text(value);
                });

                connection.on("RecieveProductCount", (value2) => {
                    $("#productcount").text(value2);
                });

                connection.on("RecieveActiveCategoryCount", (value3) => {
                    $("#activecategory").text(value3);
                });

                connection.on("RecievePassiveCategoryCount", (value4) => {
                    $("#passivecategory").text(value4);
                });


                connection.on("RecieveProductCountByCategoryNameHamburger", (value5) => {
                    $("#productcountbycategorynamehamburger").text(value5);
                });

                connection.on("RecieveProductCountByCategoryNameDrink", (value6) => {
                    $("#productcountbycategorynamedrink").text(value6);
                });

                connection.on("RecieveProductPriceAvg", (value7) => {
                    $("#productpriceavg").text(value7);
                });

                connection.on("RecieveProductNameByMaxPrice", (value8) => {
                    $("#productnamebymaxprice").text(value8);
                });
            });

        </script>


